{% extends admin.getTemplate('base_list_field') %}

{% block field %}
    {%- if value is empty -%}
        &nbsp;
    {%- elseif field_description.options.property is defined and value[app.request.locale] is defined -%}
        {{ app.request.locale|capitalize }} - {{ attribute(value[app.request.locale], field_description.options.property) }}
    {%- endif -%}
{% endblock %}
